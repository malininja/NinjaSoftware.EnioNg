@{
    ViewBag.Title = "Lista računa";
}

<h2>Lista računa</h2>

@Html.ActionLink("Novi račun", "RacunEdit", "Home")
<input type="button" value="Novi račun" onclick="alert('napravi kaj trebaš');" />

<table id="RacunTable"></table>
<div id="RacunTablePager"></div>

<script type="text/javascript">

    $("#RacunTable").jqGrid({
        url: "/JsonService/GetRacunGlavaCollectionForPaging",
        datatype: "json",
        colNames: ["Broj", "Partner", "Datum", "Iznos", "Status"],
        colModel: [
            { name: "RacunGlavaId", index: "RacunGlavaId", width: 50 },
            { name: "Partner.Naziv", index: "Partner.Naziv", width: 200 },
            { name: "Datum", index: "Datum", width: 200, formatter: "date", formatoptions: { srcformat: "Y-m-d", newformat: "d.m.Y" } },
            { name: "Iznos", index: "Iznos", width: 200, align: "right", formatter: "number", formatoptions: { decimalSeparator: ",", decimalPlaces: 2 } },
            { name: "Status.Name", index: "Status.Name", width: 200 },
        ],
        pager: "#RacunTablePager",
        caption: "Lista računa",
        onSelectRow: function (id) {
            var rowData = $(this).getRowData(id);
            var racunGlavaId = rowData["RacunGlavaId"];
            window.location.href = "/Home/RacunEdit?racunGlavaId=" + racunGlavaId;
        }
    });
</script>