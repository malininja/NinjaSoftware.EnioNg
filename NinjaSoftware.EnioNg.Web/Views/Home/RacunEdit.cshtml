@{
    ViewBag.Title = "RacunEdit";
}

<script type="text/javascript" src="~/Scripts/Home/RacunController.js"></script>

<div id="RacunEdit" ng-app>
	<h2>racun edit</h2>
	
	<div id="divNgController" ng-controller="RacunController">
		
	<table border="1">
		<tbody>
	        <tr>
	            <td style="margin-left: 80px">
	                <span >Partner:</span>
	            </td>
	            <td colspan="3">
	 				<select ng-model="racunGlava.PartnerId"
	 					ng-options="partner.PartnerId as partner.Naziv for partner in partnerCollection"></select>
	            </td>
	            <td>
	                <span>Datum:</span>
	            </td>
	            <td>
	                <input ng-model="racunGlava.Datum" />
	            </td>
	            <td>
	                <span>Tarifa:</span>
	            </td>
	            <td>
	                <select ng-model="racunGlava.TarifaId"
	                	ng-options="tarifa.TarifaId as tarifa.Naziv for tarifa in tarifaCollection"></select>
	            </td>
	            <td>
	                <input type="button" value="Pohrani" ng-click="save()" />
	            </td>
	        </tr>
	        <tr>
	            <td>
	                <span>Mjesto rada:</span>
	            </td>
	            <td>
	                <input ng-model="racunGlava.MjestoRadaNaziv" />
	            </td>
	            <td>
	                <span>Adresa rada:</span>
	            </td>
	            <td>
	                <input ng-model="racunGlava.MjestoRadaAdresa" />
	            </td>
	            <td>
	                <span>Valuta:</span>
	            </td>
	            <td>
	                <input ng-model="racunGlava.Valuta" />
	                <span> dana</span>
	            </td>
	            <td>
	                <span>Status:</span>
	            </td>
	            <td>
	                <select ng-model="racunGlava.StatusId"
	                	ng-options="status.StatusId as status.Name for status in statusCollection"></select>
	            </td>
	            <td align="center">
	                ispis (pdf download)
	            </td>
	        </tr>
	        <tr>
	            <td>
	                Vrijeme:
	            </td>
	            <td>
	                <input ng-model="racunGlava.Vrijeme" />
	            </td>
	            <td>Je PDV račun:</td>
	            <td>
	                <input type="checkbox" ng-model="racunGlava.JePdvRacun" />
	            </td>
	            <td colspan="5">
	            </td>
	        </tr>
	        <tr>
	            <td>Dodatak zaglavlju:</td>
	            <td colspan="8">
	                <textarea ng-model="racunGlava.Zaglavlje"></textarea>
	            </td>        
	        </tr>
		</tbody>
	</table>
    
    <br />
    <br />
    
	<table border="1" class="style2">
		<tbody>
			<tr>
				<td rowspan="1" colspan="4">
	                <span style="font-weight: bold">Unos nove stavke</span>
				</td>
	        </tr>
	        <tr>
	            <td>
	                <span >Artikl</span></td>
	            <td>
	                <span >Količina</span></td>
	            <td>
	                <span >Cijena</span></td>
	            <td rowspan="2">
	                <input type="button" value="Unesi stavku" ng-click="addRacunStavka()" />
	            </td>
	        </tr>
	        <tr>
	            <td class="style3">
	                <select style="width:250px;" ng-model="newRacunStavka.ArtiklId"
	                	ng-options="artikl.ArtiklId as artikl.Naziv for artikl in artiklCollection"
	                	ng-change="onArtiklChange()"></select>
	            </td>
	            <td class="style4">
	                <input type="text" ng-model="newRacunStavka.Kolicina" />
	            </td>
	            <td class="style4">
	                <input type="text" ng-model="newRacunStavka.Cijena" />
	            </td>
	        </tr>
	    </tbody>
	</table>
    
    <table>
    	<thead>
    		<tr>
    			<th>Artikl</th>
    			<th>Naziv</th>
    			<th>Količina</th>
    			<th>Cijena</th>
    			<th>PDV (%)</th>
    			</th></th>
    		</tr>
    	</thead>
    	<tbody>
    		<tr ng-repeat="racunStavka in racunStavkaCollection">
    			<td>{{ racunStavka.ArtiklId }}</td>
    			<td>{{ racunStavka.Artikl.Naziv }}</td>
    			<td>{{ racunStavka.Kolicina }}</td>
    			<td>{{ racunStavka.Cijena }}</td>
    			<td>{{ racunStavka.PdvPosto }}</td>
    			<td>
    				<a href="javascript:" ng-click="deleteRacunStavka(racunStavka.Pozicija)">X</a>
    			</td>
    		</tr>
    	</tbody>
    </table>
	</div>
</div>

<script type="text/javascript">
	$(document).on("RacunControlerLoaded", function(event, scope) {
		var racunGlavaId = ninjaSoftware.url.getParameterValue("racunGlavaId");
		
		if (racunGlavaId) {
			scope.loadRacun(racunGlavaId);
		}
	});
</script>