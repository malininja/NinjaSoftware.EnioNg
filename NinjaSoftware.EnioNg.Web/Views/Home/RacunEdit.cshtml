@{
    ViewBag.Title = "RacunEdit";
}

<script type="text/javascript" src="~/Scripts/Home/RacunController.js"></script>

<div id="RacunEdit" ng-app>
	<h2>racun edit</h2>
	
	<div id="divNgController" ng-controller="RacunController">
		
	<table border="1">
		<tbody>
	        <tr>
	            <td style="margin-left: 80px">
	                <span >Partner:</span>
	            </td>
	            <td colspan="3">
	 				<select ng-model="racunGlava.PartnerId"
	 					ng-options="partner.PartnerId as partner.Naziv for partner in partnerCollection"></select>
	            </td>
	            <td>
	                <span>Datum:</span>
	            </td>
	            <td>
	                <input ng-model="racunGlava.Datum" />
	            </td>
	            <td>
	                <span>Tarifa:</span>
	            </td>
	            <td>
	                <select ng-model="racunGlava.TarifaId"
	                	ng-options="tarifa.TarifaId as tarifa.Naziv for tarifa in tarifaCollection"></select>
	            </td>
	            <td>
	                button save
	            </td>
	        </tr>
	        <tr>
	            <td>
	                <span>Mjesto rada:</span>
	            </td>
	            <td>
	                <input ng-model="racunGlava.MjestoRadaNaziv" />
	            </td>
	            <td>
	                <span>Adresa rada:</span>
	            </td>
	            <td>
	                <input ng-model="racunGlava.MjestoRadaAdresa" />
	            </td>
	            <td>
	                <span>Valuta:</span>
	            </td>
	            <td>
	                <input ng-model="racunGlava.Valuta" />
	                <span> dana</span>
	            </td>
	            <td>
	                <span>Status:</span>
	            </td>
	            <td>
	                <select ng-model="racunGlava.StatusId"
	                	ng-options="status.StatusId as status.Name for status in statusCollection"></select>
	            </td>
	            <td align="center">
	                ispis (pdf download)
	            </td>
	        </tr>
	        <tr>
	            <td>
	                Vrijeme:
	            </td>
	            <td>
	                <input ng-model="racunGlava.Vrijeme" />
	            </td>
	            <td>Je PDV račun:</td>
	            <td>
	                <input type="checkbox" ng-model="racunGlava.
	            </td>
	            <td colspan="5">
	            </td>
	        </tr>
	        <tr>
	            <td>Dodatak zaglavlju:</td>
	            <td colspan="8">
	                textarea dodatak zaglavlju
	            </td>        
	        </tr>
		</tbody>
	</table>
    
	</div>
	
</div>